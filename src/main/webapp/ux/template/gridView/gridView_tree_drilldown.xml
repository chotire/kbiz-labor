	scwin.drag_startFunction = function(info){
	/*
	//기본적으로 info에 들어오는 값중 하위 레벨의 데이터가 있으면 같이 넘어온다.  
	*/

		var nowIdxArr = info.beforeRemoveRowIndex;//이동 대상 rowArr
		var nowIdx = nowIdxArr[0];//이동 대상 row중 첫rowidx
		var nowData = info.beforeRemoveData;//이동 대상 dataArr
		var tobeIdx = info.parentRowIndex;//이동할 타겟의 위치
		
		if($.inArray(tobeIdx,nowIdxArr) != -1){
			alert("이동할수 없습니다.");
			return false;
		} 
		if(tobeIdx>nowIdx){//아래로 이동한경우//insert remove
			dlt_menu1.insertData(tobeIdx+1,nowData)
			dlt_menu1.removeRows(nowIdxArr);
			
		}else{//아래에서 위로 이동한경우//remove insert
			dlt_menu1.removeRows(nowIdxArr);
			dlt_menu1.insertData(tobeIdx ,nowData)
			
		}
	};
	
	]]></script></head>
