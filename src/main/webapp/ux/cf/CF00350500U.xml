        if(	dsAprvMap.get("isTestYn") == null || dsAprvMap.get("isTestYn") == "" || dsAprvMap.get("isTestYn") != "N" ) {

            dsAprvMap.set("aprvTtl", jobGbCd + "_결재테스트_" + dateStr); // 결재_제목
            dsAprvMap.set("jobGbCd", jobGbCd);	                          // 업무구분코드
            dsAprvMap.set("rvwrEmpno", "504476");	                      // 검토자_사번
            dsAprvMap.set("fnlAprprEmpno", "504476");                     // 최종승인자_사번
            dsAprvMap.set("aprvPrcgNm", "");                              // 후처리결재처리명
            dsAprvMap.set("aprvPrcgEventNm", "/cf/CFAprv/notifyAprvTest");// 후처리결재처리 이벤트명(후처리 실행을 위한 URL을 입력한다)
