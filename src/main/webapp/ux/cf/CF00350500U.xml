            dsAprvMap.set("importHtmlYn", "Y");                           // 출력할 결재본문페이지 HTML방식사용여부
            dsAprvMap.set("aprvAflId","");                                // 본문링크용 첨부파일 ID (콤머로 구분해서 보내준다)
            dsAprvMap.set("popupWidth","1200");                           // 팝업창 가로크기
            dsAprvMap.set("popupHeight","800");                           // 팝업창 세로크기
            dsAprvMap.set("relatedDocumentIds","");                       // 관련문서 ID (콤머로 구분해서 보내준다)
            dsAprvMap.set("anchorUrl","");                                // 본문링크(필수X)
            dsAprvMap.set("anchorUrlMsg","");                             // 본문링크메시지(필수X)
            dsAprvMap.set("aprvAtchAreaYn","Y");                          // 첨부파일영역보기(필수X)
            dsAprvMap.set("aprvAddAflId","");                             // 첨부용 첨부파일 ID (콤머로 구분해서 보내준다)(필수X)
