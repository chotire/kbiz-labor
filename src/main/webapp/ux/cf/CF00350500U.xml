    /**************************************************************************
     * Event: scwin.rdoImportHtmlYn_onchange
     * 기 능: 결재본분 HTML방식사용 변경
     **************************************************************************/
    scwin.rdoImportHtmlYn_onclick = function() {
        if( dsAprvMap.get("importHtmlYn") == "Y" ){
            dsAprvMap.set("importUrl", "/ux/cf/CF00350501E.xml"); // 출력할 결재본문페이지 URL
            dsAprvMap.set("importHtmlYn", "N");                   // 출력할 결재본문페이지 HTML방식사용여부
        } else {
            dsAprvMap.set("importUrl", "/cf/CFUpload/notifyAprvHtmlView"); // 출력할 결재본문페이지 URL
            dsAprvMap.set("importHtmlYn", "Y");                            // 출력할 결재본문페이지 HTML방식사용여부
        }
    };
]]></script>

