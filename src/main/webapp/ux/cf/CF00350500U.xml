    /**************************************************************************
     *  [3] 사용자정의 함수
     **************************************************************************/
    /**************************************************************************
     * Event: scwin.fnCommentPopup
     * 기 능: 의견달기 팝업
     **************************************************************************/
    scwin.fnCommentPopup = function() {

        var popOps = {
            pid : "commentPopup" + "_" + new Date().getTime(),
            url : "/ux/cf/CF00350500P.xml",
            modal : false ,
            type : "browser",
            popup_name : "의견달기",
            callbackFn : "scwin.fnPopCommentCallBack",
            widType : "L",
            height : 700,
            data : {} // 전송파라미터
        };

        com.popup_open(popOps);
    };

    // 의견달기팝업 결과 후처리
    scwin.fnPopCommentCallBack = function(result) {

        // 닫기일때에만 작동
        try {
            if (result == "") {
                $p.getFrame().getParentFrame().scope.scwin.fnPopAprvCloseAction();
            }
        } catch (e) {
        }

        dsAprvMap.set("aprvComment", result.data); // 에디터 데이터  
        dsAprvMap.set("aprvSbrqCmtryCn", result.data);
        dsAprvMap.set("aprvTtl", result.aprvTtl); //  수정된 결재 제목
        dsAprvMap.set("aflId", result.aflId);
        if (result.flag == 'ok') {
            dsAprvMap.set("useEditor","Y");  
            scwin.fnPreviewPopup();
        }
    };

    /**************************************************************************
     * Event: scwin.fnCommentPopup
     * 기 능: 결재상신 미리보기 팝업
     **************************************************************************/
    scwin.fnPreviewPopup = function() {
        var popupWidth  = dsAprvMap.get("popupWidth") || 1200;
        var popupHeight = dsAprvMap.get("popupHeight") || 800;

        var popOps = {
            pid : "previewPopup" + "_" + new Date().getTime(),
            url : "/ux/cf/CF00350501P.xml",
            modal : true,
            //type : "browser",
            popup_name : "결재미리보기",
            callbackFn : "scwin.fnPopPreviewCallBack",
            //widType : "XL",
            width  : popupWidth,
            height : popupHeight,
            data : {} //전송파라미터
        };

        com.popup_open(popOps);
    };

    // 결재상신 미리보기 팝업 결과 후처리
    scwin.fnPopPreviewCallBack = function(result) {

        // 닫기일때에만 작동
        try {
            if (result == "") {
                $p.getFrame().getParentFrame().scope.scwin.fnPopAprvCloseAction();
            }
        } catch (e) {}

        debugger;
        //xml생성
        if (result.flag == 'ok') {
            dsAprvMap.set("aprvDoc", result.data); // 이미지 데이터
            dsAprvMap.set("aprvHtmlDoc", result.htmlData); // HTML 데이터
            dsAprvMap.set("aflId", result.aflId);
            scwin.fnMakeXml();
        }
    };

    /**************************************************************************
     * 함 수 명: scwin.fnMakeXml
     * 기 능: 결재 정보 생성
     **************************************************************************/
    scwin.fnMakeXml = function() {
        // URL인코딩설정
        if( dsAprvMap.get("anchorUrl") != "" && dsAprvMap.get("anchorUrl") != null ) {
            dsAprvMap.set("anchorUrl", encodeURI(dsAprvMap.get("anchorUrl")));
        }

        ajaxLib.ajax("/cf/CFAprv/createTcfAprvNew", {
            method : "POST",
            requestData : dsAprvMap.getJSON(),
            callback :
                function(result, e){
                	var data = result.data.aprvData;
                	var aprvNo = data.aprvNo;
	        		if(aprvNo != null && aprvNo > 0){
		        		dsAprvMap.set("resultAprvNo", aprvNo);//결재번호 등록
		        		dsAprvMap.set( "aprvImgAflId" , result.data.aprvData.aprvImgAflId );//결재_이미지_첨부파일ID [본문 캡쳐 이미지]

			            //결재 팝업	        		
	        			scwin.fnApprovalPopup();	        		
	        		}
            	},
            errCallback : "fnErrCallBack"
        });        
    };

    /**************************************************************************
     * Event: scwin.fnApprovalPopup
     * 기 능: 결재 팝업
     **************************************************************************/
    scwin.fnApprovalPopup = function() {
        var popupWidth  = 1350;
        var popupHeight = 800;

        var popOps = {
            pid : "approvalPopup" + "_" + new Date().getTime(),
            url : "/ux/cf/cf0400/CF04000020P.xml",
            modal : true,
            //type : "browser",
            popup_name : "결재",
            callbackFn : "scwin.fnPopApprovalCallBack",
            //widType : "XL",
            width  : popupWidth,
            height : popupHeight,
            data : {} //전송파라미터
        };
        debugger;

        com.popup_open(popOps);
    };
    
    /**************************************************************************
     * Event: scwin.fnPopApprovalCallBack
     * 기 능: 결재 팝업 callback
     **************************************************************************/    
    scwin.fnPopApprovalCallBack = function(result) {
		
        // 닫기일때에만 작동
        try {
            if (result == "") {
            	dsAprvMap.set("resultAprvNo", "");//결재번호 등록
            }
        } catch (e) {}

        //xml생성
        if (result.flag == 'ok') {
        	// 개발자 사용액션 실행
        	try { $p.getParentWindow().scwin.aprvPublicAction(); } catch (e) {}
        }
    };
    
    /**************************************************************************
     *  [4] Callback
     **************************************************************************/
    // 3.xml생성결과
    scwin.fnCallback = function(result, e) {
        //xml결과값 텔레피아 전송
        //scwin.fnTransAprv(result);
    };

    // 3.xml생성결과 에러
    scwin.fnErrCallBack = function(e) {
        console.log('xml파싱오류!');
    };

